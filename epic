		Zipcode:<input type "text" id="zip">
		<button onclick = "loadWeather()">Check Weather</button>
		<script>
			function loadWeather() {
				var zipCode = document.getElementById('zip').value;
				var xhttp = new XMLHttpRequest();
				xhttp.onreadystatechange = function(){
					if(this.readyState == 4 && this.status == 200){
						var weatherjson = JSON.parse(this.responseText);
						document.getElementById("city").innerHTML = weatherjson.name;
						document.getElementById("tempF").innerHTML =Math.round(((((weatherjson.main.temp)-273.15) * 9/5) + 32)*10)/10;
					//	background = weatherjson.weather[0].description;
					}
				};
				xhttp.open("GET", "https://api.openweathermap.org/data/2.5/weather?zip="+zipCode+",us&appid=d5e92d5042d274ece5a00cca4d167c3d");
				xhttp.send();
			}
		</script>
